<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easydictionary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
         android:name="com.dreamers.model.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
       <meta-data android:name="AA_DB_NAME" android:value="easy_dictionary.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" /> 
        
        <activity
            android:name="com.example.easydictionary.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.example.easydictionary.OptionActivity"></activity>
         <activity android:name="com.example.easydictionary.BanglaSearch"></activity>
          <activity android:name="com.example.easydictionary.UpdateActivity"></activity>  
          <activity android:name="com.example.easydictionary.Phonetic"></activity>  
          
          <activity android:name="com.example.easydictionary.FavouriteActivity"></activity>  
          <activity android:name="com.example.easydictionary.FavouriteList"></activity>  
          <activity android:name="com.example.easydictionary.AddActivity"></activity>  
          <activity android:name="com.example.easydictionary.BanglaToBangla"></activity>  
            <activity android:name="com.example.easydictionary.BanglaToBanglaSearch"></activity>  
    </application>

</manifest>
